
extends layout

block content 
 
    .container-fluid
      .card
        .container-fluid
          .wrapper.row
            .preview.col-md-6
              #pic-1.tab-pane.active
                img(src=product['image'])
            .details.col-md-6
              h3.product-title #{product.name}
              .rating
                .stars
                  span.fa.fa-star
                  span.fa.fa-star
                  span.fa.fa-star
                  span.fa.fa-star
                  span.fa.fa-star
                span.review-no 41 reviews
              p.product-description #{product.description}
              h4.price current price: 
                span #{product.price + "$"}
              p.vote
                strong 91%  of buyers enjoyed this product! 
                strong (87 votes)
              -var options = product['options'];
              -for(var opt in options){
                h5.option-header #{opt+" : "}
                  -for (var i=0; i<options[opt].length; i++){
                    span.option-value #{options[opt][i]}
                  -}
              -}
              -var category = product['category'];
              -var subcategory = product['subcategory'];
              -var id = product['id'];
              .action
                input(class="product-url" type="hidden" value=category+'/'+subcategory+'/'+id)
                button.add-to-cart.btn.btn-default(href='/addProductToCart'  role='button' aria-hidden='true') add to cart